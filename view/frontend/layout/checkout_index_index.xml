<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.messages">
            <block class="Magento\Framework\View\Element\Template" name="ajax.message.placeholder" template="Magento_Theme::html/messages.phtml"/>
            <block class="Magento\Framework\View\Element\Messages" name="messages" as="messages" template="Magento_Theme::messages.phtml"/>
        </referenceContainer>
        <referenceContainer name="after.body.start">            
            <block class="Magento\Framework\View\Element\Template" name="beforebody" template="Azpay_Gateway::prepareGateway.phtml"/>
        </referenceContainer>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="component" xsi:type="string">uiComponent</item>
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="renders" xsi:type="array">
                                                            <!-- merge payment method renders here -->
                                                            <item name="children" xsi:type="array">
                                                                <item name="rm_gateway_cc_payments" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Azpay_Gateway/js/view/payment/rm_gateway_cc</item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="rm_gateway_cc" xsi:type="array">
                                                                            <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
																<item name="rm_gateway_boleto_payments" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Azpay_Gateway/js/view/payment/rm_gateway_boleto</item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="rm_gateway_boleto" xsi:type="array">
                                                                            <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                                <item name="rm_gateway_cd_payments" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Azpay_Gateway/js/view/payment/rm_gateway_cd</item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="rm_gateway_cd" xsi:type="array">
                                                                            <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                                <item name="rm_gateway_tef_payments" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Azpay_Gateway/js/view/payment/rm_gateway_tef</item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="rm_gateway_tef" xsi:type="array">
                                                                            <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
															</item>                                                            
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
